{
  "name": "robbyson-abstract-framework",
  "version": "1.1.0",
  "description": "Generic framework for operation CRUD",
  "author": "Lucas Alves Teixeira <lucasalvesteixeira@gmail.com>",
  "keywords": [
    "backend",
    "node server",
    "typescript",
    "abstract"
  ],
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "license": "ISC",
  "scripts": {
    "start": "tsc -w",
    "build": "npm run clean && tsc",
    "clean": "rimraf dist",
    "lint": "tslint ./src/**/*.ts ./test/**/*.ts",
    "lint:fix": "tslint --fix ./src/**/*.ts ./test/**/*.ts -t verbose",
    "pretest": "cross-env NODE_ENV=test npm run build && npm run lint",
    "test": "cross-env NODE_ENV=test mocha --exit",
    "test:integration": "cross-env NODE_ENV=test mocha --opts ./test/mocha-integration.opts --exit",
    "test:unit": "cross-env NODE_ENV=test mocha --opts ./test/mocha-unit.opts --exit",
    "test:coverage": "nyc npm test",
    "tsc": "tsc"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "json",
      "html"
    ],
    "report-dir": "./reports/coverage",
    "sourceMap": true,
    "instrument": true
  },
  "dependencies": {
    "@types/body-parser": "1.17.0",
    "@types/cookie-parser": "^1.4.1",
    "@types/express": "^4.16.0",
    "@types/express-serve-static-core": "^4.16.0",
    "@types/multer": "1.3.7",
    "@types/passport": "^0.4.7",
    "@types/serve-static": "^1.13.2",
    "joi": "^14.3.1",
    "robbyson-library": "^1.0.33",
    "typescript-ioc": "^1.2.5",
    "typescript-rest": "^2.0.0",
    "body-parser": "^1.18.3",
    "cookie-parser": "^1.4.3",
    "express": "^4.16.4",
    "fs-extra": "^7.0.0",
    "lodash": "^4.17.11",
    "multer": "^1.4.1",
    "passport": "^0.4.0",
    "path": "^0.12.7",
    "reflect-metadata": "^0.1.12",
    "require-glob": "^3.2.0",
    "swagger-ui-express": "^4.0.1",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/joi": "^14.3.3",
    "@types/chai": "^4.1.7",
    "@types/fs-extra": "5.0.4",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/lodash": "^4.14.119",
    "@types/mocha": "^5.2.5",
    "@types/passport-jwt": "^3.0.1",
    "@types/proxyquire": "^1.3.28",
    "@types/request": "^2.48.1",
    "@types/sinon": "^7.0.3",
    "@types/sinon-chai": "^3.2.2",
    "@types/yamljs": "^0.2.30",
    "chai": "^4.2.0",
    "codecov": "^3.3.0",
    "cross-env": "^5.2.0",
    "jsonwebtoken": "^8.4.0",
    "mocha": "^5.2.0",
    "nyc": "^13.3.0",
    "passport-jwt": "^4.0.0",
    "proxyquire": "^2.1.0",
    "request": "^2.88.0",
    "rimraf": "^2.6.3",
    "sinon": "^7.2.6",
    "sinon-chai": "^3.3.0",
    "source-map-support": "^0.5.9",
    "test-wait": "^1.1.3",
    "ts-node": "^7.0.1",
    "tslint": "^5.15.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.2",
    "typescript-ioc": "^1.2.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lucasalvesteixeira/robbyson-abstract-framework"
  },
  "bugs": {
    "url": "https://github.com/lucasalvesteixeira/robbyson-abstract-framework/issues"
  },
  "directories": {
    "lib": "dist",
    "doc": "doc"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "engineStrict": true
}
